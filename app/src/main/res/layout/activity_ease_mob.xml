<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.easemob.EaseMobActivity">

    <EditText
        android:id="@+id/ed_user"
        android:hint="账号"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/ed_pwd"
        android:hint="密码"
        app:layout_constraintRight_toRightOf="@+id/ed_user"
        app:layout_constraintTop_toBottomOf="@+id/ed_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_log"
        android:text="登录"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_friend"
        app:layout_constraintTop_toBottomOf="@+id/btn_log"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/et_num"
        app:layout_constraintTop_toBottomOf="@+id/btn_log"
       app:layout_constraintLeft_toLeftOf="@+id/tv_friend"
        android:layout_width="20dp"
        android:text="0"
        android:layout_marginLeft="100dp"
        android:background="@mipmap/ai"
        android:layout_marginTop="20dp"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/tv_failMsg"
        app:layout_constraintTop_toBottomOf="@+id/tv_friend"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>